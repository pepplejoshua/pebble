import "std:io";
import "std:string";

fn main(argv []str) int {
    if argv.len < 2 {
        print `usage: {argv[0]} <filepath>`;
        return 0;
    }
    var path = argv[1];
    var file = io::open(path, io::MODE_READ);

    if file != nil {
        var contents = io::read_all(file);
        defer string::delete(&contents);

        print string::as_str(contents);
    } else {
        print "Cannot read ", path, ".";
    }

    return 0;
}
