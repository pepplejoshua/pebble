{
    "name": "pebble",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#function-call"
        },
        {
            "include": "#function-name"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#type-annotation"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#field-access"
        },
        {
            "include": "#identifiers"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "begin": "//",
                    "end": "\n",
                    "name": "comment.line.double-slash"
                }
            ]
        },
        "function-name": {
            "patterns": [
                {
                    "name": "entity.name.function",
                    "match": "(?<=(fn ))([a-zA-Z0-9_]+)"
                }
            ]
        },
        "function-call": {
            "patterns": [
                {
                    "name": "support.function",
                    "match": "([a-zA-Z0-9_]+)(?=\\s*\\()"
                }
            ]
        },
        "field-access": {
            "patterns": [
                {
                    "match": "([a-zA-Z0-9_]+)(?=\\.)",
                    "captures": {
                        "1": {
                            "name": "variable.object.property"
                        }
                    }
                },
                {
                    "match": "(?<=\\.)([a-zA-Z0-9_]+)",
                    "captures": {
                        "1": {
                            "name": "variable.other.property"
                        }
                    }
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.pebble",
                    "match": "\\b(type|fn|for|loop|while|if|else|extern|let|var|true|false|nil|print|break|continue|sizeof|as|return|switch|case|defer|some|none|context|import)\\b"
                },
                {
                    "name": "keyword.types.pebble",
                    "match": "\\b(void|bool|int|str|char|f32|f64|i8|i16|i32|i64|isize|u8|u16|u32|u64|usize|struct|enum)\\b"
                }
            ]
        },
        "type-annotation": {
            "patterns": [
                {
                    "comment": "Variable/let declarations with types",
                    "begin": "\\b(var|let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+",
                    "end": "(?=[=;])",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.pebble"
                        },
                        "2": {
                            "name": "variable.other.pebble"
                        }
                    },
                    "patterns": [
                        {
                            "match": "\\*|\\?",
                            "name": "keyword.operator.pebble"
                        },
                        {
                            "match": "\\[|\\]",
                            "name": "punctuation.bracket.pebble"
                        },
                        {
                            "match": "::",
                            "name": "keyword.operator.path.pebble"
                        },
                        {
                            "match": "[a-zA-Z_][a-zA-Z0-9_]*",
                            "name": "entity.name.type.pebble"
                        }
                    ]
                },
                {
                    "comment": "Function return types",
                    "begin": "\\)\\s+",
                    "end": "(?=\\{)",
                    "patterns": [
                        {
                            "match": "\\*|\\?",
                            "name": "keyword.operator.pebble"
                        },
                        {
                            "match": "\\[|\\]",
                            "name": "punctuation.bracket.pebble"
                        },
                        {
                            "match": "::",
                            "name": "keyword.operator.path.pebble"
                        },
                        {
                            "match": "[a-zA-Z_][a-zA-Z0-9_]*",
                            "name": "entity.name.type.pebble"
                        }
                    ]
                },
                {
                    "comment": "Type after as",
                    "begin": "\\bas\\s+",
                    "end": "(?=[^a-zA-Z0-9_:\\[\\]\\*\\?])",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.control.pebble"
                        }
                    },
                    "patterns": [
                        {
                            "match": "\\*|\\?",
                            "name": "keyword.operator.pebble"
                        },
                        {
                            "match": "\\[|\\]",
                            "name": "punctuation.bracket.pebble"
                        },
                        {
                            "match": "::",
                            "name": "keyword.operator.path.pebble"
                        },
                        {
                            "match": "[a-zA-Z_][a-zA-Z0-9_]*",
                            "name": "entity.name.type.pebble"
                        }
                    ]
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.optional.pebble",
                    "match": "\\?"
                },
                {
                    "name": "keyword.operator.variadic.pebble",
                    "match": "\\.\\.\\."
                },
                {
                    "name": "keyword.operator.path.pebble",
                    "match": "::"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "match": "([[:alpha:]_][[:alnum:]_]*)",
                    "captures": {
                        "0": {
                            "name": "variable.other.pebble"
                        }
                    }
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.pebble",
                    "match": "\\b0[xX][0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.float.pebble",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.pebble",
                    "match": "\\b[0-9]+([eE][+-]?[0-9]+)?\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.pebble",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.pebble",
                    "match": "\\\\(n|r|t|\\\\|\"|'|0|x[0-9a-fA-F]{2}|u[0-9a-fA-F]{4})"
                }
            ]
        }
    },
    "scopeName": "source.pebble"
}